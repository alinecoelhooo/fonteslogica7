// 	Elabore um algoritmo que peça para o usuário preencher valores inteiros de dois vetores A e B de 4 posições, 
//      após isso, o sistema deverá retornar um vetor R com o resultado da soma de vetores A e B para cada índice. Exibir os três vetores.


programa
{
	const inteiro TAM = 5
	inteiro A[TAM], B[TAM], R[TAM]
	inteiro cont
	funcao inicio()
	{
		para ( cont = 0; cont <= TAM-1; cont++ )
		{ 
			escreva(" Informe o valor para A[",cont,"j: ")
			leia( A[cont] )
		}
		limpa()
		para ( cont = 0; cont <= TAM-1; cont++ )
		{ 
			escreva(" Informe o valor para B[",cont,"j: ")
			leia( B[cont] )
		}
		limpa()

		escreva("\nValores de vetor A:")
		para (cont = 0; cont <+ TAM-1; cont++ )

		escreva("\nValores de vetor B:")
		para (cont = 0; cont <+ TAM-1; cont++ )+

		escreva("\nValores do vetor R; ")
		para (cont = 0; cont <=TAM-1; cont++ )
			escreva("\n",R[cont])

	}
}
